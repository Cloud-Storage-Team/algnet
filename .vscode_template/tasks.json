{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ultra build all",
            "type": "shell",
            "command": "cmake -DCMAKE_INSTALL_PREFIX=${workspaceFolder}/build/install/ -DCMAKE_C_COMPILER=/usr/bin/gcc -DCMAKE_CXX_COMPILER=/usr/bin/g++ -DCMAKE_BUILD_TYPE=Debug -S${workspaceFolder} -B${workspaceFolder}/build",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "build all",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Debug",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "build project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DBUILD_TESTS:boolean=OFF", //dont work with no wisible reason
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "build tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "-DBUILD_MAIN=OFF"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
    ]
}
