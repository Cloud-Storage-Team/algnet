{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug simulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/simulator", // Укажите путь к вашему исполняемому файлу тестов
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build all",
            "miDebuggerPath": "/usr/bin/gdb", // Укажите путь к вашему отладчику
        },
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_simulator", // Укажите путь к вашему исполняемому файлу тестов
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", // или "lldb" для macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build all",
            "miDebuggerPath": "/usr/bin/gdb", // Укажите путь к вашему отладчику
        },
    ]
}
